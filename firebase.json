{
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "cloudrun-firebase-app",
          "region": "us-central1"
        }
      }
    ]
  },
  "firestore": {
    "rules": "terraform/firestore.rules",
    "indexes": "terraform/firestore.indexes.json"
  }
}
